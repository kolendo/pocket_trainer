<resources>

	<!-- Base application theme. -->
	<style name="TrainerTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<!-- Base application theme. -->
	<style name="TrainerTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/grey_300</item>
		<item name="colorPrimaryDark">@color/grey_400</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="TrainerTheme.Dark" parent="Theme.AppCompat.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="TrainerTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="TrainerTheme.InfoLabel">
		<item name="android:paddingBottom">12dp</item>
		<item name="android:textColor">@color/colorAccent</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="TrainerTheme.InfoCard">
		<item name="android:layout_marginBottom">4dp</item>
	</style>

	<style name="TrainerTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

	<style name="TrainerTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="AddressPickerSecondaryText">
		<item name="android:textColor">@color/secondary_text_light</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="ExpandedTitle">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="FilterTextViewStyle">
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:drawablePadding">5dp</item>
	</style>
</resources>
