	<style name="TrainerTheme.InfoLabel">
		<item name="android:paddingBottom">12dp</item>
		<item name="android:textColor">@color/colorAccent</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="TrainerTheme.ProfileInfo">
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">@color/secondary_text_light</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">3dp</item>
	</style>

	<style name="TrainerTheme.ProfileSwitch">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/secondary_text_light</item>
	</style>

	<style name="TrainerTheme.InfoCard">
		<item name="android:layout_marginBottom">4dp</item>
	</style>

	<style name="TrainerTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

	<style name="TrainerTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="AddressPickerSecondaryText">
		<item name="android:textColor">@color/secondary_text_light</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="ExpandedTitle">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="FilterTextViewStyle">
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:drawablePadding">5dp</item>
	</style>
</resources>
