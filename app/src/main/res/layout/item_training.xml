<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:id="@+id/credit_card_layout"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="horizontal">

	<ImageView
		android:id="@+id/item_training_fav"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="12dp"
		android:paddingLeft="12dp"
		android:paddingRight="24dp"
		android:paddingBottom="24dp"
		android:src="@drawable/ic_star_border_gray_24dp"
		tools:ignore="ContentDescription"/>

	<RelativeLayout
		android:id="@+id/item_training_more"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:paddingEnd="12dp"
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:layout_gravity="center"
		android:layout_weight="1"
		tools:ignore="RtlSymmetry">

		<TextView
			android:id="@+id/item_training_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/colorAccent"
			android:textSize="15sp"
			tools:text="Sunday chest lifting"/>

		<TextView
			android:id="@+id/item_training_activities"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			tools:text="5 activities"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:adjustViewBounds="true"
			android:layout_centerInParent="true"
			android:layout_alignParentEnd="true"
			android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
			tools:ignore="ContentDescription"/>
	</RelativeLayout>
</LinearLayout>