<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:tools="http://schemas.android.com/tools"
			xmlns:map="http://schemas.android.com/apk/res-auto"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="5dp">

		<android.support.v7.widget.CardView
			android:id="@+id/workout_details_map_card"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			app:cardCornerRadius="0dp"
			app:cardUseCompatPadding="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="5dp">
			<com.google.android.gms.maps.MapView
				android:id="@+id/map_view_workout_details"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				map:mapType="normal"
				map:liteMode="true"/>
		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_below="@+id/workout_details_map_card"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardCornerRadius="0dp"
			app:cardUseCompatPadding="true"
			android:layout_centerHorizontal="true">
			<ImageView
				android:id="@+id/workout_details_faded_background"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="-120dp"
				android:src="@drawable/ic_directions_bike_gray_100dp"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/activity_vertical_margin"
				android:orientation="vertical">

				<!-- ITEMS -->
				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/card_view_vertical_spacing"
					android:gravity="center_vertical">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/ic_access_time_gray_24dp"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/start_time"
							android:textColor="@color/colorAccent"
							android:textSize="12sp"
							android:id="@+id/textView4"/>

						<TextView
							android:id="@+id/workout_details_start_time"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:text="143 434234"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/card_view_vertical_spacing"
					android:gravity="center_vertical">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/ic_place_gray_24dp"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/start_location"
							android:textColor="@color/colorAccent"
							android:textSize="12sp"/>
						<TextView
							android:id="@+id/workout_details_start_location"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:text="januszowo 43"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/card_view_vertical_spacing"
					android:gravity="center_vertical">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/ic_access_time_gray_24dp"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/finish_time"
							android:textColor="@color/colorAccent"
							android:textSize="12sp"/>
						<TextView
							android:id="@+id/workout_details_finish_time"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:text="143 434234"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/card_view_vertical_spacing"
					android:gravity="center_vertical">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/ic_place_gray_24dp"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/finish_location"
							android:textColor="@color/colorAccent"
							android:textSize="12sp"/>
						<TextView
							android:id="@+id/workout_details_finish_location"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:text="januszowo 43"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/card_view_vertical_spacing"
					android:gravity="center_vertical">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/ic_timer_gray_24dp"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/elapsed_time"
							android:textColor="@color/colorAccent"
							android:textSize="12sp"/>
						<TextView
							android:id="@+id/workout_details_elapsed_time"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:text="00:43:56"/>
					</LinearLayout>
				</LinearLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/card_view_vertical_spacing">
					<ImageView
						android:id="@+id/workout_details_total_distance_img"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/ic_gray_road_variant"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toEndOf="@id/workout_details_total_distance_img"
						android:orientation="vertical">
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/total_distance"
							android:textColor="@color/colorAccent"
							android:textSize="12sp"/>
						<TextView
							android:id="@+id/workout_details_total_distance"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:text="143 434234 km"/>
					</LinearLayout>
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_alignParentEnd="true"
						android:layout_centerInParent="true"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"
						android:paddingStart="15dp"
						android:paddingEnd="15dp"
						android:paddingTop="2dp"
						android:paddingBottom="2dp"
						android:background="@drawable/frame_rounded_accent">
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_trending_up_white_24dp"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center"
							android:layout_marginStart="2dp"
							android:text="@string/chart"
							android:textSize="13sp"
							android:textColor="@color/white"
							android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
					</LinearLayout>
				</RelativeLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/card_view_vertical_spacing"
					android:gravity="center_vertical">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/ic_gray_speedometer"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/top_speed"
							android:textColor="@color/colorAccent"
							android:textSize="12sp"/>
						<TextView
							android:id="@+id/workout_details_top_speed"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:text="100 km/h"/>
					</LinearLayout>
				</LinearLayout>

				<RelativeLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/card_view_vertical_spacing"
					android:gravity="center_vertical">
					<ImageView
						android:id="@+id/workout_details_average_speed_img"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/ic_gray_speedometer"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_toEndOf="@id/workout_details_average_speed_img"
						android:orientation="vertical">
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/average_speed"
							android:textColor="@color/colorAccent"
							android:textSize="12sp"/>
						<TextView
							android:id="@+id/workout_details_average_speed"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:text="100 km/h"/>
					</LinearLayout>
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_alignParentEnd="true"
						android:layout_centerInParent="true"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"
						android:paddingStart="15dp"
						android:paddingEnd="15dp"
						android:paddingTop="2dp"
						android:paddingBottom="2dp"
						android:background="@drawable/frame_rounded_accent">
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_trending_up_white_24dp"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center"
							android:layout_marginStart="2dp"
							android:text="@string/chart"
							android:textSize="13sp"
							android:textColor="@color/white"
							android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
					</LinearLayout>
				</RelativeLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/ic_whatshot_gray_24dp"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/burned_calories"
							android:textColor="@color/colorAccent"
							android:textSize="12sp"/>
						<TextView
							android:id="@+id/workout_details_burned_calories"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:text="1000 kcal"/>
					</LinearLayout>
				</LinearLayout>
				<!-- END ITEMS -->
			</LinearLayout>
		</android.support.v7.widget.CardView>

	</RelativeLayout>



</ScrollView>
