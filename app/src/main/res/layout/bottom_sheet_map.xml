<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorPrimary"
				android:paddingBottom="@dimen/bottom_sheet_horizontal_margin">

	<LinearLayout
		android:id="@+id/map_bottom_sheet_header"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:paddingTop="@dimen/bottom_sheet_vertical_margin"
		android:paddingBottom="@dimen/bottom_sheet_vertical_margin"
		android:layout_marginStart="@dimen/bottom_sheet_horizontal_margin">
		<ImageView
			android:id="@+id/map_bottom_sheet_time_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_timer_white_24dp"/>
		<TextView
			android:id="@+id/map_bottom_sheet_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/white"
			android:text="@string/blank_time"
			tools:text="1:12:43"/>
	</LinearLayout>

	<ImageView
		android:id="@+id/map_bottom_sheet_route_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:src="@drawable/ic_white_road_variant"
		android:layout_alignTop="@+id/map_bottom_sheet_speed_layout"/>
	<TextView
		android:id="@+id/map_bottom_sheet_route"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/map_bottom_sheet_route_img"
		android:gravity="center"
		android:textColor="@color/white"
		android:text="@string/dash"
		tools:text="43 km"/>

	<LinearLayout
		android:id="@+id/map_bottom_sheet_speed_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="@dimen/bottom_sheet_vertical_margin"
		android:layout_marginEnd="@dimen/bottom_sheet_horizontal_margin"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/map_bottom_sheet_speed_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:src="@drawable/ic_white_speedometer"/>
		<TextView
			android:id="@+id/map_bottom_sheet_speed"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:text="@string/dash"
			android:layout_gravity="center"
			tools:text="65 km/h"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/map_bottom_sheet_resume"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/map_bottom_sheet_route"
		android:layout_marginTop="@dimen/bottom_sheet_vertical_margin"
		android:orientation="vertical"
		android:layout_marginStart="@dimen/bottom_sheet_horizontal_margin">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_play_circle_outline_white_48dp"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:text="@string/resume"
			android:layout_gravity="center"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/map_bottom_sheet_pause"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/map_bottom_sheet_route"
		android:layout_centerInParent="true"
		android:layout_marginTop="@dimen/bottom_sheet_vertical_margin"
		android:orientation="vertical">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_pause_circle_outline_white_24dp"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:text="@string/pause"
			android:layout_gravity="center"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/map_bottom_sheet_stop"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/map_bottom_sheet_speed_layout"
		android:layout_alignParentEnd="true"
		android:layout_marginEnd="@dimen/bottom_sheet_horizontal_margin"
		android:layout_marginTop="@dimen/bottom_sheet_vertical_margin"
		android:orientation="vertical">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:src="@drawable/ic_stop_circle_outline_white"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:text="@string/finish"
			android:layout_gravity="center"/>
	</LinearLayout>

</RelativeLayout>

