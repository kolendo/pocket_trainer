<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:id="@+id/credit_card_layout"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:clickable="true"
			  android:foreground="?attr/selectableItemBackground"
			  android:orientation="horizontal"
			  android:padding="12dp">

	<ImageView
		android:id="@+id/item_workout_fav"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:paddingEnd="12dp"
		android:src="@drawable/ic_star_border_gray_24dp"
		tools:src="@drawable/ic_star_accent_24dp"
		tools:ignore="ContentDescription"/>
	<ImageView
		android:id="@+id/item_workout_type"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:adjustViewBounds="true"
		android:src="@drawable/ic_directions_run_gray_48dp"
		tools:src="@drawable/ic_directions_bike_gray_48dp"

		tools:ignore="ContentDescription"/>

	<LinearLayout
		android:id="@+id/item_workout_more"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:duplicateParentState="true"
		android:clickable="true"
		android:paddingStart="12dp"
		android:layout_weight="1">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1">
			<TextView
				android:id="@+id/item_workout_date"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/colorAccent"
				android:textSize="15sp"
				tools:text="7:59 p.m., 15 October 2016"/>
			<TextView
				android:id="@+id/item_workout_distance"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				tools:text="10.4 km"/>
		</LinearLayout>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:adjustViewBounds="true"
			android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
			tools:ignore="ContentDescription"/>
	</LinearLayout>
</LinearLayout>